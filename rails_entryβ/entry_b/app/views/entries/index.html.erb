<%= link_to "Create", :new_entry %>

<h2>一覧表示</h2>

<table border="1">
  <th>投稿日時</th>
  <th>タイトル</th>
  <th>本文</th>
  <th>-</th>
<% @entries.each do |entry| %>
  <tr>
    <td><%= entry.posted_at %></td>
    <td><%= entry.title %></td>
    <td><%= entry.body %></td>
    <td><%= link_to "編集", [:edit, entry] %></td>
  </tr>
<% end %>
</table>